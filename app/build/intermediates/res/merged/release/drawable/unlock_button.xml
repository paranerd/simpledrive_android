                android:width="1dip"
                android:color="@color/white" />
            <solid
                android:color="@color/darkergreen" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <corners
                android:radius="1000dip"/>
            <stroke
                android:width="1dip"
                android:color="@color/white" />
            <solid
                android:color="@color/darkgreen" />
        </shape>
    </item>
</selector>