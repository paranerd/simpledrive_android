<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="General">

        <Preference
            android:id="@+id/clearcache"
            android:key="clearcache"
            android:title="Clear cache"
            android:summary="Size: calculating..." />

        <ListPreference
            android:key="fileview"
            android:entries="@array/fileviews"
            android:summary="List"
            android:entryValues="@array/fileviewValues"
            android:title="Fileview"
            android:dialogTitle="Select fileview"
            android:defaultValue="list" />

        <CheckBoxPreference
            android:key="darktheme"
            android:title="Use dark theme"
            android:summary=""
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="loadthumb"
            android:title="Load thumbnails"
            android:summary="Disable to save data"
            android:defaultValue="false"/>

        <CheckBoxPreference
            android:key="context"
            android:title="Enable bottom context menu"
            android:summary="Disabled"
            android:defaultValue="false"/>

        <CheckBoxPreference
            android:id="@+id/pin"
            android:key="pin"
            android:title="PIN"
            android:summary="Disabled" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Info">

        <Preference
            android:id="@+id/app_version"
            android:key="app_version"
            android:title="App version"
            android:summary="" />

    </PreferenceCategory>

</PreferenceScreen>