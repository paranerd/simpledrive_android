<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="7dp"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false">

        <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="#f2f2f2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android">

                <include
                    android:id="@+id/toolbar"
                    layout="@layout/toolbar"/>

                <TextView
                    android:textSize="20.0sp"
                    android:textColor="#ffb3b3b3"
                    android:gravity="center"
                    android:id="@id/empty_list_item"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Empty Folder"
                    android:layout_centerHorizontal="true" />

                <ListView
                    android:id="@id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#ffb3b3b3"
                    android:layout_below="@+id/toolbar"
                    android:layout_above="@+id/audioplayer"
                    android:listSelector="@drawable/bkg_light"
                    android:choiceMode="singleChoice" />

                <GridView
                    android:id="@+id/grid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:numColumns="3"
                    android:horizontalSpacing="1dp"
                    android:verticalSpacing="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="60dp"
                     />

                <RelativeLayout
                    android:id="@+id/hover_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="200.0dip"
                    android:layout_marginBottom="25.0dip"
                    android:layout_alignParentBottom="true"
                    android:layout_above="@+id/audioplayer">

                    <ImageButton
                        android:id="@+id/bOK"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/action_button"
                        android:src="@drawable/ic_check"
                        android:visibility="gone"/>

                    <ImageButton
                        android:id="@+id/bAdd"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/action_button"
                        android:src="@drawable/ic_add"
                        android:visibility="gone"/>

                    <ImageButton
                        android:id="@+id/bCreateFolder"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="96dp"
                        android:background="@drawable/action_button"
                        android:src="@drawable/ic_folder"
                        android:visibility="gone"/>

                    <ImageButton
                        android:id="@+id/bCreateFile"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="176dp"
                        android:background="@drawable/action_button"
                        android:src="@drawable/ic_unknown"
                        android:visibility="gone"/>

                    <ImageButton
                        android:id="@+id/bUpload"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="80dp"
                        android:background="@drawable/action_button"
                        android:src="@drawable/ic_upload"
                        android:visibility="gone"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@id/innerlayout"
                    android:background="#cc000000"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:textSize="20.0sp"
                        android:textColor="#ffeeeeee"
                        android:gravity="center"
                        android:id="@id/overlay"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Swipe Left"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/audioplayer"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/darkergreen"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/audio_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="@string/app_name"/>

                    <SeekBar
                        android:id="@+id/seekBar1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="26dp"
                        android:max="100"
                        android:progress="0"
                        android:maxHeight="3dip"
                        android:thumbTint="@color/white"
                        android:progressDrawable="@drawable/progressbar"/>

                    <ImageButton
                        android:id="@+id/bPrev"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="15dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/darkgreen"
                        android:src="@drawable/ic_upload"
                        android:visibility="gone"/>

                    <ImageButton
                        android:id="@+id/bPlay"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="15dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/ic_play" />

                    <ImageButton
                        android:id="@+id/bNext"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="156dp"
                        android:layout_marginBottom="15dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/darkgreen"
                        android:src="@drawable/ic_upload"
                        android:visibility="gone"/>

                    <ImageButton
                        android:id="@+id/bExit"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:background="@color/darkergreen"
                        android:src="@drawable/ic_close" />
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v4.widget.SwipeRefreshLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:background="@color/darkgreen">

            <TextView
                android:id="@+id/header_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15.0sp"
                android:textColor="@color/white"
                android:paddingLeft="16dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/header_server"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12.0sp"
                android:textColor="@color/white"
                android:layout_below="@+id/header_user"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp"/>

        <ListView
            android:id="@+id/left_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:divider="#aae3e3e3"
            android:dividerHeight="0.1dp" />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>