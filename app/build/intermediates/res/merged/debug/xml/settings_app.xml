<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Interface">

        <ListPreference
            android:key="listlayout"
            android:title="List Layout"
            android:summary="List"
            android:entries="@array/listLayouts"
            android:entryValues="@array/listLayoutValues"
            android:dialogTitle="Select List Layout"
            android:defaultValue="0" />

        <ListPreference
            android:key="colortheme"
            android:title="Theme"
            android:summary=""
            android:entries="@array/themes"
            android:entryValues="@array/themeValues"
            android:dialogTitle="Choose"
            android:defaultValue="0" />

        <CheckBoxPreference
            android:key="loadthumb"
            android:title="Load thumbnails"
            android:summary="Disable to save data"
            android:defaultValue="false"/>

        <CheckBoxPreference
            android:key="context"
            android:title="Enable bottom context menu"
            android:summary="Disabled"
            android:defaultValue="false"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="General">

        <Preference
            android:id="@+id/clearcache"
            android:key="clearcache"
            android:title="Clear cache"
            android:summary="Size: calculating..." />

        <CheckBoxPreference
            android:key="photosync1"
            android:title="Photo Sync"
            android:summary=""
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="pin"
            android:title="PIN"
            android:summary="Disabled"
            android:defaultValue="false"/>

        <CheckBoxPreference
            android:key="twofactor"
            android:title="Two-Factor-Authentication"
            android:summary=""
            android:defaultValue="false"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Info">

        <Preference
            android:key="appversion"
            android:title="App version"
            android:summary="" />

    </PreferenceCategory>

</PreferenceScreen>