<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.simpledrive"
    android:versionCode="73"
    android:versionName="5.1.2" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.GET_CREDENTIALS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MainTheme.Light" >
        <activity
            android:name="org.simpledrive.activities.RemoteFiles"
            android:label="@string/app_name"
            android:theme="@style/MainTheme.Light" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.simpledrive.activities.ShareFiles"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="*/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND_MULTIPLE" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="*/*" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.simpledrive.activities.FileSelector"
            android:label="@string/app_name" />
        <activity
            android:name="org.simpledrive.activities.Login"
            android:label="Login"
            android:theme="@style/MainTheme"
            android:windowSoftInputMode="stateAlwaysVisible" >
        </activity>

        <service android:name="org.simpledrive.authenticator.AuthenticationService" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
"
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
"
        </service>

        <activity
            android:name="org.simpledrive.activities.ImageViewer"
            android:label="Images"
            android:theme="@style/MainThemeFullscreen" >
        </activity>
        <activity
            android:name="org.simpledrive.activities.Editor"
            android:label="Editor"
            android:theme="@style/MainTheme.Light" >
        </activity>
        <activity
            android:name="org.simpledrive.activities.AppSettings"
            android:label="Settings"
            android:theme="@style/MainTheme.Light" >
        </activity>
        <activity
            android:name="org.simpledrive.activities.ServerSettings"
            android:label="Server"
            android:theme="@style/MainTheme.Light" >
        </activity>
        <activity
            android:name="org.simpledrive.activities.ServerLog"
            android:label="Log"
            android:theme="@style/MainTheme" >
        </activity>
        <activity
            android:name="org.simpledrive.activities.Users"
            android:label="Users"
            android:theme="@style/MainTheme.Light" >
        </activity>
        <activity
            android:name="org.simpledrive.activities.UserDetails"
            android:label="User Details"
            android:theme="@style/MainTheme.Light" >
        </activity>
        <activity
            android:name="org.simpledrive.activities.Unlock"
            android:label="User Details"
            android:theme="@style/MainTheme.Light" >
        </activity>
        <activity
            android:name="org.simpledrive.activities.EnablePIN"
            android:label="Enable PIN"
            android:theme="@style/MainTheme.Light" >
        </activity>
        <activity
            android:name="org.simpledrive.activities.Accounts"
            android:label="Accounts"
            android:theme="@style/MainTheme.Light" >
        </activity>

        <service
            android:name="org.simpledrive.helper.AudioService"
            android:enabled="true" >
        </service>
    </application>

</manifest>