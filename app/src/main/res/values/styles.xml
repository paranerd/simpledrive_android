<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MainTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/darkgreen</item>
        <item name="android:colorAccent">@color/darkgreen</item>
        <item name="android:colorPrimary">@color/darkgreen</item>
        <item name="android:colorPrimaryDark">@color/darkergreen</item>
        <!-- Contextual action bar -->
        <item name="android:actionModeBackground">@color/darkgreen</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_arrow</item>

        <item name="android:textColorPrimary">@color/grey6</item>
        <item name="android:textColorSecondary">@color/grey3</item>
        <item name="android:textColorTertiary">@color/grey4</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:colorMultiSelectHighlight">@color/lightgreen</item>
        <item name="android:colorFocusedHighlight">@color/grey1</item>
        <item name="android:textColorHighlight">?android:colorPrimary</item>
    </style>

    <style name="MainTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/darkgreen</item>
        <item name="android:colorAccent">@color/darkgreen</item>
        <item name="android:colorPrimary">@color/darkgreen</item>
        <item name="android:colorPrimaryDark">@color/darkergreen</item>
        <!-- Contextual action bar -->
        <item name="android:actionModeBackground">@color/darkgreen</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_arrow</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/grey3</item>
        <item name="android:textColorTertiary">@color/white</item>
        <item name="android:colorBackground">@color/grey7</item>
        <item name="android:colorMultiSelectHighlight">@color/grey6</item>
        <item name="android:colorFocusedHighlight">@color/grey8</item>
        <item name="android:textColorHighlight">?android:colorPrimary</item>
    </style>

    <style name="MenuItemAppearance">
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MainThemeFullscreen" parent="MainTheme.Light">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ToolbarTitle" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ToolbarSubtitle" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyButtonLarge" parent="MyButton">
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/red</item>
    </style>

    <style name="MyButtonCircle">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/unlock_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">28sp</item>
    </style>
</resources>
