<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="server"
        android:title="General"
        android:shouldDisableView="true">

        <Preference
            android:id="@+id/server_address"
            android:key="server_address"
            android:title="Address" />

        <Preference
            android:id="@+id/server_storage"
            android:key="server_storage"
            android:title="Storage" />

        <EditTextPreference
            android:id="@+id/server_upload_max"
            android:key="server_upload_max"
            android:title="Upload limit"
            android:dialogTitle="Set upload limit" />

        <Preference
            android:id="@+id/showusers"
            android:key="users"
            android:title="Users"
            android:summary="Manage user accounts" />

        <Preference
            android:id="@+id/showlog"
            android:key="showlog"
            android:title="Show Log" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Info">

        <Preference
            android:id="@+id/server_version"
            android:key="server_version"
            android:title="Server version"
            android:summary="Loading..." />

    </PreferenceCategory>

</PreferenceScreen>