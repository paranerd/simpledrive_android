<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgreen">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:fontFamily="sans-serif-light"
                android:text="simpleDrive" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:id="@+id/unlock_pin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/lightgreen"
                        android:background="@color/transparentgreen"
                        android:layout_centerVertical="true"
                        android:hint="Enter your PIN to unlock" />

                    <ImageView
                        android:id="@+id/unlock_clear_pin"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_close"
                        android:layout_centerVertical="true"
                        android:onClick="onClick"
                        android:layout_alignParentRight="true"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/darkergreen">

                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/unlock_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/red"
                    android:textSize="16sp"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:tag="1"
                    android:id="@+id/unlock_one"
                    style="@style/MyButtonCircle"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:text="1"/>

                <Button
                    android:tag="2"
                    android:id="@+id/unlock_two"
                    style="@style/MyButtonCircle"
                    android:onClick="onClick"
                    android:text="2"/>

                <Button
                    android:tag="3"
                    android:id="@+id/unlock_three"
                    style="@style/MyButtonCircle"
                    android:onClick="onClick"
                    android:text="3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:tag="4"
                    android:id="@+id/unlock_four"
                    style="@style/MyButtonCircle"
                    android:onClick="onClick"
                    android:text="4"/>

                <Button
                    android:tag="5"
                    android:id="@+id/unlock_five"
                    style="@style/MyButtonCircle"
                    android:onClick="onClick"
                    android:text="5"/>

                <Button
                    android:tag="6"
                    android:id="@+id/unlock_six"
                    style="@style/MyButtonCircle"
                    android:onClick="onClick"
                    android:text="6"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:tag="7"
                    android:id="@+id/unlock_seven"
                    style="@style/MyButtonCircle"
                    android:onClick="onClick"
                    android:text="7"/>

                <Button
                    android:tag="8"
                    android:id="@+id/unlock_eight"
                    style="@style/MyButtonCircle"
                    android:onClick="onClick"
                    android:text="8"/>

                <Button
                    android:tag="9"
                    android:id="@+id/unlock_nine"
                    style="@style/MyButtonCircle"
                    android:onClick="onClick"
                    android:text="9"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:tag="0"
                    android:id="@+id/unlock_zero"
                    style="@style/MyButtonCircle"
                    android:onClick="onClick"
                    android:text="0"/>
            </LinearLayout>

            <TextView
                android:id="@+id/unlock_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/grey2"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:text="Sign out"
                android:onClick="onClick"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>