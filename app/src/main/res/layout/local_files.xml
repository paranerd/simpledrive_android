<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#fff0f0f0"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  	xmlns:android="http://schemas.android.com/apk/res/android">
  	
    <ListView
        android:textColor="#ffb3b3b3"
        android:id="@id/locallist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:listSelector="@drawable/bkg_dark"
        android:choiceMode="singleChoice"
        android:layout_alignParentTop="true" />
    
    <TextView
        android:textSize="20.0sp"
        android:textColor="#ffb3b3b3"
        android:gravity="center"
        android:id="@id/local_empty_list_item"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Empty Folder"
        android:layout_centerHorizontal="true" />
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="200.0dip"
        android:layout_marginBottom="20.0dip"
        android:layout_alignParentBottom="true">
        
        <Button
            android:id="@id/bCheck"
            android:background="@drawable/checkbutton"
            android:visibility="gone" android:layout_width="55.0dip"
            android:layout_height="55.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</RelativeLayout>