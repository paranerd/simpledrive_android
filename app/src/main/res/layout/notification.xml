<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@id/notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@id/notifimage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"/>

    <ImageView
        android:id="@id/notifexit"
        android:background="@drawable/ic_close_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@id/notifbutton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/notifexit" />

    <TextView
        android:id="@id/notiftitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ellipsize="middle"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:gravity="center_vertical|start"
        android:singleLine="true"
        android:layout_toLeftOf="@id/notifbutton"
        android:layout_toRightOf="@id/notifimage"
        style="Custom Notification Title"
        android:text="longlonglonglonglonglonglonglonglonglonglonglonglonglonglonglong"/>
</RelativeLayout>